{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "array",
  "items" : {
    "type" : "object",
    "required": ["alias", "name", "url", "type", "enabled", "autorefresh", "gpgcheck", "priority"],
    "properties": {
      "alias": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "enum": ["yast2", "rpm-md", "plaindir", null]
      },
      "url": {
        "type": "string",
        "format": "uri",
        "minLength": 1
      },
      "enabled": {
        "type": "boolean"
      },
      "autorefresh": {
        "type": "boolean"
      },
      "gpgcheck": {
        "type": "boolean"
      },
      "priority": {
        "type": "integer",
        "minimum": 1
      }
    }
  }
}

