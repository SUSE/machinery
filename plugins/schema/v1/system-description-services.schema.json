{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "required": ["init_system", "services"],
  "properties": {
    "init_system": {
      "type": "string",
      "minLength": 1
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "state"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "state": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}

